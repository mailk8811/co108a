/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    And(a=b,b=sel,out=Anda);
    Not(in=sel,out=Nots);
    And(a=a,b=Nots,out=Andb);
    Or(a=Anda,b=Andb,out=out);

}